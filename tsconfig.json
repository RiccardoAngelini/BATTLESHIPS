{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist", 
     "rootDir": "./src",
     "forceConsistentCasingInFileNames": true,
    "types": [
      "jest"
    ],
     "typeRoots": ["./node_modules/@types", "./src/@types"]
     
  },
  "include": ["src",
             "src/test/**/*.ts",
          
               ],
  "exclude": ["node_modules", "dist"]
}
